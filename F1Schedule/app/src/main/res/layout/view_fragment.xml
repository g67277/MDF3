<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/background"
        android:background="@xml/edittext_shadow"/>

    <TextView
        android:layout_width="340dp"
        android:layout_height="180dp"
        android:id="@+id/location_text_view"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:text="Nazir Shuqair"
        android:textSize="45sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Circuit Name:"
        android:id="@+id/textView"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#7d7d7d"
        android:layout_below="@+id/background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="340dp"
            android:layout_height="100dp"
            android:id="@+id/circuit_text_view"
            android:singleLine="true"
            android:gravity="center"
            android:textColor="#4e4e4e"
            android:text="571-439-6745"
            android:textSize="35sp"
            android:layout_below="@+id/textView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Race Date:"
        android:id="@+id/textView2"
        android:textSize="15sp"
        android:textColor="#7d7d7d"
        android:gravity="center"
        android:layout_below="@+id/circuit_text_view"
        android:layout_alignLeft="@+id/date_text_view"
        android:layout_alignStart="@+id/date_text_view"
        android:layout_marginLeft="35dp" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:id="@+id/date_text_view"
            android:gravity="center"
            android:textSize="30sp"
            android:text="testing"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/circuit_text_view"
            android:layout_alignStart="@+id/circuit_text_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of Laps:"
        android:id="@+id/textView3"
        android:textSize="15sp"
        android:textColor="#7d7d7d"
        android:gravity="center"
        android:layout_toEndOf="@+id/textView"
        android:layout_below="@+id/circuit_text_view"
        android:layout_toRightOf="@+id/textView" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:id="@+id/lapsNum_text_view"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="30sp"
            android:text="testing"
            android:layout_below="@+id/textView3"
            android:layout_alignRight="@+id/circuit_text_view"
            android:layout_alignEnd="@+id/circuit_text_view" />


</RelativeLayout>