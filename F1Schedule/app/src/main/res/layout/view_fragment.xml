<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:id="@+id/location_text_view"
        android:gravity="center"
        android:textColor="#7d7d7d"
        android:text="Nazir Shuqair"
        android:textSize="45sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />



        <TextView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/circuit_text_view"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:textColor="#4e4e4e"
            android:text="571-439-6745"
            android:layout_below="@+id/location_text_view"
            android:textSize="20sp"
            android:layout_alignLeft="@+id/date_text_view"
            android:layout_alignStart="@+id/date_text_view" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/date_text_view"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:layout_below="@+id/textView4"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/lapsNum_text_view"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textSize="20sp"
            android:layout_below="@+id/date_text_view"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M"
            android:id="@+id/message_button"
            android:layout_toRightOf="@+id/call_button"
            android:layout_toEndOf="@+id/call_button"
            android:layout_above="@+id/date_text_view"
            android:layout_alignTop="@+id/circuit_text_view" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E"
            android:id="@+id/email_button"
            android:layout_alignTop="@+id/date_text_view"
            android:layout_alignRight="@+id/date_text_view"
            android:layout_alignEnd="@+id/date_text_view"
            android:layout_above="@+id/lapsNum_text_view" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:id="@+id/call_button"
            android:layout_toLeftOf="@+id/email_button"
            android:layout_toStartOf="@+id/email_button"
            android:layout_above="@+id/date_text_view"
            android:layout_alignTop="@+id/circuit_text_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Circuit Name:"
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_below="@+id/location_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/date_text_view"
        android:layout_toLeftOf="@+id/circuit_text_view"
        android:layout_toStartOf="@+id/circuit_text_view"
        android:textSize="15sp"
        android:textColor="#7d7d7d" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Race Date:"
        android:id="@+id/textView2"
        android:textSize="15sp"
        android:textColor="#7d7d7d"
        android:gravity="center"
        android:layout_below="@+id/circuit_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/date_text_view"
        android:layout_toLeftOf="@+id/circuit_text_view"
        android:layout_toStartOf="@+id/circuit_text_view"
        android:layout_marginTop="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of Laps:"
        android:id="@+id/textView3"
        android:textSize="15sp"
        android:textColor="#7d7d7d"
        android:gravity="center"

        android:layout_below="@+id/date_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/lapsNum_text_view"
        android:layout_toLeftOf="@+id/lapsNum_text_view"
        android:layout_toStartOf="@+id/lapsNum_text_view"
        android:layout_marginTop="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:text="New Text"
        android:id="@+id/textView4"
        android:layout_below="@+id/circuit_text_view"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_alignRight="@+id/circuit_text_view"
        android:layout_alignEnd="@+id/circuit_text_view"
        android:background="#ff575757" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:text="New Text"
        android:id="@+id/textView5"
        android:layout_below="@+id/date_text_view"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_alignRight="@+id/date_text_view"
        android:layout_alignEnd="@+id/date_text_view"
        android:background="#ff575757" />

</RelativeLayout>