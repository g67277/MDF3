<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <CheckBox
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="shuffle"
        android:id="@+id/shuffle_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <CheckBox
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="repeat"
        android:id="@+id/repeat_btn"
        android:layout_alignBottom="@+id/shuffle_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:checked="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/play_pause_btn"
        android:layout_below="@+id/shuffle_btn"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back_btn"
        android:layout_alignTop="@+id/play_pause_btn"
        android:layout_toLeftOf="@+id/play_pause_btn"
        android:layout_toStartOf="@+id/play_pause_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:id="@+id/skip_btn"
        android:layout_alignTop="@+id/play_pause_btn"
        android:layout_toRightOf="@+id/play_pause_btn"
        android:layout_toEndOf="@+id/play_pause_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stop_btn"
        android:layout_below="@+id/play_pause_btn"
        android:layout_centerHorizontal="true" />
</RelativeLayout>